<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="7"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/choco_holic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/newpost"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:src="@drawable/plus"
            android:layout_width="0dp"
            android:layout_height="30dp"/>
        <ImageView
            android:padding="3dp"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/menubar"
            android:layout_width="0dp"
            android:layout_height="30dp"/>

    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:background="#DCD8D8"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_gravity="center"
                android:background="@drawable/story_border" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_gravity="center"
                app:civ_border_color="@color/white"
                android:layout_height="100dp"
                android:src="@drawable/p1"
                app:civ_border_width="2dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="70dp"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="3"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="Posts"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="70dp"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="592"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="Followers"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="70dp"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="389"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="Following"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="@string/maitry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="NITK'24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="10dp"
        android:text="@string/edit_profile"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="center"
        android:backgroundTint="@color/white"
        android:background="@drawable/editbutton"
        android:layout_width="match_parent"
        android:layout_height="34dp"/>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_margin="7dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            android:background="@drawable/editstory" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="60dp"
                            android:layout_gravity="center"
                            app:civ_border_color="@color/white"
                            android:layout_height="60dp"
                            android:src="@drawable/s1"
                            app:civ_border_width="2dp" />
                    </FrameLayout>

                    <TextView
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:text="Nature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="7dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            android:background="@drawable/editstory" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="60dp"
                            android:layout_gravity="center"
                            app:civ_border_color="@color/white"
                            android:layout_height="60dp"
                            android:src="@drawable/s2"
                            app:civ_border_width="2dp" />
                    </FrameLayout>

                    <TextView
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:text="Me"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="7dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:background="@drawable/new_story_border" />

                        <ImageView
                            android:layout_width="60dp"
                            android:padding="22dp"
                            android:layout_gravity="center"
                            android:layout_height="60dp"
                            android:src="@drawable/story_add"
                             />
                    </FrameLayout>

                    <TextView
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:text="new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="1dp"
            android:src="@drawable/grid"
            android:layout_width="20dp"
            android:layout_height="25dp"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/tag"
            android:layout_width="20dp"
            android:layout_height="25dp"/>

    </LinearLayout>
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:background="#DCD8D8"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


</LinearLayout>